{
  
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "react-native": [
        "node_modules/react-native"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
