{
  "name": "omi-realtime-aichat",
  "version": "2.0.0",
  "description": "Omi plugin backend for real-time AI chat with comprehensive logging and monitoring",
  "main": "server-new.js",
  "scripts": {
    "start": "node server-new.js",
    "start:legacy": "node server.js",
    "start:deploy": "npm run prisma:generate && npm run prisma:deploy && node server-new.js",
    "dev": "nodemon server-new.js",
    "dev:legacy": "nodemon server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy"
  },
  "keywords": [
    "omi",
    "plugin",
    "openai",
    "gpt-4",
    "chatbot"
  ],
  "author": "Brandon Monroe",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "argon2": "^0.44.0",
    "axios": "^1.6.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "nanoid": "^5.1.5",
    "openai": "^5.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^6.16.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
